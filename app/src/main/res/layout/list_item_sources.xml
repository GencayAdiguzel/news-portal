<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/sources_li"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:background="?android:attr/selectableItemBackground">
    <TextView
            android:id="@+id/sourcesName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/sourcesTitle"
            android:textSize="15sp"
            android:text="@string/sources_li_title_placeholder"
    />
    <TextView
            android:id="@+id/sourcesDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/sourcesDescription"
            android:text="@string/sources_li_description_placeholder"
            android:layout_marginTop="5dp"/>

</LinearLayout>